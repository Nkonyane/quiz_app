<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wendy.quiz_app.MainActivity">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/topp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/images_4"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_marginTop="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnslang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slang"
        android:textColor="#800000"
        android:layout_above="@+id/btnSynonym"
        android:layout_alignRight="@+id/btnSynonym"
        android:layout_alignEnd="@+id/btnSynonym" />

    <Button
        android:id="@+id/btnSynonym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synonym"
        android:textColor="#800000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textColor="#800000"
        android:text="Chat slang and Synonym Quiz"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
